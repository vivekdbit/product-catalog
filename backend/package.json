{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "echo 'No build needed for pure JS'",
    "test": "echo \"No tests yet\"",
    "migration:generate": "echo 'Manual migration creation - see migrations folder'",
    "migration:run": "node src/database/scripts/run.js",
    "migration:revert": "node src/database/scripts/revert.js",
    "schema:sync": "node src/database/scripts/schema-sync.js",
    "db:seed": "node src/database/seeds/product-seed.js",
    "db:reset": "npm run schema:sync -- --force && npm run db:seed"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "http-status": "^2.1.0",
    "joi": "^18.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
